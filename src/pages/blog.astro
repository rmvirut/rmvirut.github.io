---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component frontmatter". It never runs in the browser.
import Head from "../components/head.astro";
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import Blogpostcard from "../components/blogpostcard.astro";
import { getCollection } from "astro:content";
const {
  bootstrapcss = "../../node_modules/bootstrap/dist/css/bootstrap.min.css",
  bootstrapjs = "../../node_modules/bootstrap/dist/js/bootstrap.min.js",
  title = "Blog",
} = Astro.props;

const allBlogpost = await getCollection("blog");
---

<html lang="en">
  <Head title={title} />
  <body>
    <div class="container">
      <Navbar />
      <header class="text-center">
        <h1>Blog</h1>
        <p>This is my blog. Read interesting articles down here</p>
      </header>
      <div class="row">
        <section class="col-8">
          <Blogpostcard />

          {allBlogpost.map((post) => <li>{post}</li>)}
        </section>
        <aside class="col-4"></aside>
      </div>

      <Footer />
    </div>
  </body>
</html>
