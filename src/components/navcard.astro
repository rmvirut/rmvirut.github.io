---
interface Props {
  name: string;
  href?: string;
  img?: string;
}

const {
  href = "#",
  name,
  img: imgsrc = "https://placehold.co/600x600",
} = Astro.props;
---

<div class="card">
  <img src={imgsrc} class="card-img opacity-100" />
  <div class="card-img-overlay text-center align-content-center">
    <div class="text-bg-light p-2 rounded">
      <a href={href} class="card-title" style="text-decoration: none;"
        ><h5 class="display-6">{name}</h5></a>
    </div>
  </div>
</div>
